
public class Operacoes {
	
	public double soma(double a , double b) {
		double soma;
		soma = a + b;
		return soma;
	}
	public double subtracao(double a , double b) {
		double sub;
		sub = a - b;
		return sub;
	}
	public double divisão(double a , double b) {
		double div;
		if(b != 0) {
			div = a/b;
			return div;
		}else {
			System.out.println("Não pode ser divisivel por zero!");
			return 0;
		}
	}
	public double multiplicao(double a , double b) {
			double mult;
			mult = a * b;
			return mult;
		}
	public void mostraMenu() {
		System.out.println("-----Menu------------------------------------------------------");
		System.out.println("| 1- Soma 2-Subtração 3-Divisão 4-Multiplicação 5-Saída       |");
		System.out.println("---------------------------------------------------------------");
	}
		
	
	
}
